---
import type { ImageMetadata } from 'astro';

interface Stat {
  title: string;
  value: string;
  description: string;
  textColor?: string;
}

const stats: Stat[] = [
  {
    title: '疲勞代謝',
    value: '300%',
    description: '營養吸收效率提升',
    textColor: 'text-brand-secondary-dark'
  },
  {
    title: '防護屏障',
    value: '67%',
    description: '減少自由基損傷',
    textColor: 'text-brand-secondary-dark'
  },
  {
    title: '青春凍齡',
    value: '8X',
    description: '薑黃素吸收率提升',
    textColor: 'text-brand-secondary-dark'
  },
  {
    title: '夜間修復',
    value: '16hr',
    description: '斷食效果模擬',
    textColor: 'text-brand-secondary-dark'
  }
];
// import images
const images = import.meta.glob<{ default: ImageMetadata }>('/public/images/*.{jpeg,jpg,png,gif,webp}');

---

<section class="relative max-w-3xl mx-auto center py-24 overflow-hidden min-h-[80vh]">
  <div class="absolute inset-0 bg-[url('/images/headche_woman.webp')] bg-cover bg-center bg-no-repeat blur-[2px]"></div>
  <div class="relative z-10">
  <div class="mx-auto max-w-5xl px-4 sm:px-6 lg:px-8">
    <div class="mx-auto max-w-2xl text-center motion-safe:animate-slide-up">
      <h2 class="text-3xl font-bold tracking-tight text-white sm:text-4xl drop-shadow-lg">
        <span class="block bg-gradient-to-r from-azure-500 to-chartreuse-500 text-transparent bg-clip-text">
          為什麼你需要 BioNova？
        </span>
      </h2>
      <p class="my-6 text-xl leading-8 text-gray-100 drop-shadow-lg">
        現代人忙碌、壓力大，外食多、睡眠少，</br>營養缺口悄悄侵蝕你的健康資本！
      </p>
    </div>
    <div class="mt-16 motion-safe:animate-slide-up">
      <div class="relative">
        <div class="relative inset-0 flex flex-row justify-center items-center" aria-hidden="true">
          <div class="flex-1 border-t border-gray-300"></div>
          <span class="w-fit bg-gradient-to-r from-brand-primary to-brand-secondary bg-clip-text text-transparent px-3 text-lg font-semibold inline-block">
            專為「想保養卻沒時間」的都會族設計
          </span>
          <div class="flex-1 border-t border-gray-300"></div>
        </div>
      </div>
      <dl class="mt-16 py-8 grid grid-cols-1 gap-4 overflow-hidden rounded-2xl text-center sm:grid-cols-2 lg:grid-cols-4">
        {
          stats.map((stat, index) => (
            <div 
              class="flex flex-col bg-chartreuse-600/40 p-4 rounded-xl shadow-lg hover:shadow-brand-primary/20 transition-all duration-300 hover:-translate-y-1 opacity-0 motion-safe:animate-slide-up backdrop-blur-sm"
              style={`animation-delay: ${index * 150}ms; animation-fill-mode: forwards;`}
            >
              <dt class={`text-sm font-semibold leading-6 ${stat.textColor}`}>{stat.title}</dt>
              <dd class="order-first text-4xl font-bold tracking-tight text-white drop-shadow-lg">{stat.value}</dd>
              <dd class="mt-2 text-sm text-gray-300">{stat.description}</dd>
            </div>
          ))
        }
      </dl>
    </div>
  </div>
</section>

<style>
  @keyframes slide-up-fade {
    from {
      transform: translateY(30px);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }

  .motion-safe\:animate-slide-up {
    animation: slide-up-fade 0.6s ease-out;
  }
</style>
